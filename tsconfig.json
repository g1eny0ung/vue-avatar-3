{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "lib/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
