{
  "name": "vue-avatar-3",
  "version": "0.2.3",
  "description": "A useful avatar component for Vue 2&3, with support for letter avatars.",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1eny0ung/vue-avatar-3"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "main": "./dist/vue-avatar-3.umd.js",
  "module": "./dist/vue-avatar-3.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-avatar-3.es.js",
      "require": "./dist/vue-avatar-3.umd.js"
    }
  },
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "dts": "vue-tsc --project tsconfig.build.json",
    "build+dts": "npm run build && npm run dts",
    "test": "vitest",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "npm run build+dts"
  },
  "keywords": [
    "vue",
    "vue-component",
    "avatar"
  ],
  "author": "Yue Yang <g1enyy0ung@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0",
    "vue": "^3.0.0 || ^2.6.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "vue-demi": "^0.13.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^6.6.1",
    "@types/node": "^18.11.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-vue": "^4.0.0",
    "happy-dom": "^7.7.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.4",
    "vitest": "^0.25.2",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.9"
  },
  "lint-staged": {
    "*.(ts|vue|md)": "prettier --write"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@testing-library/vue"
      ]
    }
  }
}
